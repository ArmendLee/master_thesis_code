name: "macc_0.3_r2_x2_to_x16_s2"

layer {
  name: "data"
  type: "BBTXTData"
  top: "data"
  top: "label"
  include {
    phase: TRAIN
  }
  image_data_param {
    source: "/datasets/kitti/labels/train_all_no_truncated_car.bbtxt"
    batch_size: 8
  }
  bbtxt_param {
    width: 512
    height: 512
    reference_size_min: 23
    reference_size_max: 440
  }
}
layer {
  name: "data"
  type: "BBTXTData"
  top: "data"
  top: "label"
  include {
    phase: TEST
  }
  image_data_param {
    source: /datasets/jura/labels/test_short.bbtxt"
    batch_size: 4
  }
  bbtxt_param {
    width: 512
    height: 512
    reference_size_min: 23
    reference_size_max: 440
