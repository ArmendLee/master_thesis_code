    num_output: 64
    kernel_size: 3
    pad: 3
    dilation: 3
    stride: 2
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
layer {
  name: "relu_conv_x1_2"
