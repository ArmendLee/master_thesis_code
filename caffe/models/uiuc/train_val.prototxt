# ------------------------------------------ UPSAMPLING ------------------------------------------ #
# ---------------------------------------------- x4 ---------------------------------------------- #
layer {
  name: "upsampling1"
  type: "Deconvolution"
  bottom: "conv4_3"
  top: "upsampling1"
  param {
    lr_mult: 1
    decay_mult: 1
  }
  param {
    lr_mult: 2
    decay_mult: 0
  }
  convolution_param {
    num_output: 1
    kernel_size: 4
    stride: 2
    pad: 1
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
layer {
  name: "relu5"
  type: "ReLU"
  bottom: "upsampling1"
  top: "upsampling1"
}

# --------------------------------------------- LOSS --------------------------------------------- #
layer {
  name: "loss"
  type: "AccumulatorLoss"
  bottom: "upsampling1"
  bottom: "label"
  top: "loss"
  accumulator_loss_param {
    radius: 2
    downsampling: 4
    negative_ratio: 4
  }
}

